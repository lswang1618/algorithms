<div class="row">
  <div class="small-12 column">
    <%= devise_error_messages! %>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="small-12 column">
      <h2><%=title%>s</h2>
    </div>
  </div>
  <div class="row">
    <div class="small-3 medium-2 large-2 columns">
      <div class="field">
        <%= f.label :email, :class => 'field_label' %>
      </div>
    </div>
    <div class="small-12 medium-10 large-10 columns">
      <div class="field">
        <%= f.email_field :email, :class => 'text_field user_text_field', autofocus: true, :placeholder => "Your email will be your username.", :required => 'required', :minlength => 3, :maxlength => 40, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-3 medium-2 large-2 columns">
      <div class="field">
        <%= f.label :password, :class => 'field_label' %>
      </div>
    </div>
    <div class="small-12 medium-10 large-10 columns">
      <div class="field">
        <%= f.password_field :password, :class => 'text_field user_text_field', autocomplete: "off", :placeholder => "Create a hellotoken password.", :required => 'required', :minlength => 8, :maxlength => 40 %>
      </div>
    </div>
  </div> 
  <div class="row">
    <div class="small-3 medium-2 large-2 columns">
      <div class="field">
        <%= f.label :password_confirmation, 'Password', :class => 'field_label' %>
      </div>
    </div>
    <div class="small-12 medium-10 large-10 columns">
      <div class="field">
        <%= f.password_field :password_confirmation, :class => 'text_field user_text_field', autocomplete: "off", :placeholder => "Confirm your hellotoken password.", :required => 'required', :minlength => 8, :maxlength => 40 %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <div class="field">
        <%= f.check_box :terms_of_service, :class => 'small_checkbox', :required => 'required' %>
        <%= f.label :terms_of_service, 'I agree to the', :class => 'small_checkbox_label' %>
        <%= link_to "terms of service.", terms_path, :target => "_blank", :class => "terms_link" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <div class="actions">
      	<%= f.submit "Sign Up as a " + title, :name => nil, :class => 'yellow-button' %>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="small-12 columns">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
